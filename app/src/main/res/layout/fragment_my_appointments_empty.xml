<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_new_appointment"
            android:layout_width="@dimen/extra_extra_large_125"
            android:layout_height="@dimen/extra_extra_large_125"
            android:contentDescription="@string/calendar_icon"
            android:src="@drawable/new_appointment_drawable" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_150"
            android:fontFamily="@font/poppins"
            android:text="@string/no_future_appointments"
            android:textAlignment="center"
            android:textSize="28sp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_new_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_100"
        android:contentDescription="@string/new_appointment"
        android:textSize="18sp"
        android:text="New Appointment"
        app:icon="@drawable/qr_code_scanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--        android:backgroundTint="@color/crimson"-->
    <!--        android:textColor="@color/white"-->

</androidx.constraintlayout.widget.ConstraintLayout>